			Map<String, Object> pocDirectoryParams = new HashMap<String, Object>();
			pocDirectoryParams.put("pocCreator", oldPocGroup.getOwnerUri());
			pocDirectoryParams.put("ownerUri", oldPocGroup.getOwnerUri());
			pocDirectoryParams.put("auid", "org.openmobilealliance.poc-groups");
			pocDirectoryParams.put("directoryFileName", oldPocGroup.getGroupFileName());
			List<PocDirectory> pocDirectorys = pocDirectoryService.findForUnPage(pocDirectoryParams);
			
			if(pocDirectorys != null && pocDirectorys.size() > 0){
				PocDirectory pocDirectory = pocDirectorys.get(0);
				oldPocGroupAuidUri = pocDirectory.getAuidUri();
			}
		}
		
		String addSel = "xcap-directory/folder/[@auid='org.openmobilealliance.poc-groups']/entry/[@uri='"+oldPocGroupAuidUri+"']";
		removeElement.addAttribute("sel", addSel);
		removeElement.addAttribute("ws", "after");
		documentElement.add(removeElement);
		
		result = doc.asXML();
		/*System.out.println("wangzhe diffdoc :" + result);*/
		
		if(result != null && !result.equals("")){
			byte[] bits;
			
			try {
				BASE64Encoder enc = new BASE64Encoder();
				bits = result.getBytes("UTF8");
				result = enc.encode(bits);
				/*System.out.println("wangzhe diffdoc base64:" + result);*/
			} catch (Exception e) {
				// TODO: handle exception
				System.out.println(e.getMessage());
			}
		}
		
		return result;
	}
	
	public String getPocGroupByDisplayNameJson(PocServerConfig pocServerConfig, Document doc, String urlPara){
		String json = "";
		
		String paraJson = urlPara;
		JSONObject jsonObject = JSONObject.fromObject(paraJson);
		
		String displayName = "";
		if(jsonObject.containsKey("displayName")){
			displayName = jsonObject.opt("displayName").toString();
		}
		
		String groupUri = "";
		if(jsonObject.containsKey("groupUri")){
			groupUri = jsonObject.opt("groupUri").toString();
		}
		
		JSONObject jsonObjectResult = new JSONObject();
		
		try {
			String companyCode = pocServerConfig.getCompanyCode();
			PocCompany pocCompany = pocCompanyService.getPocCompanyByComapnyCode(companyCode);
			
			Map<String, Object> params = new HashMap<String, Object>();
			params.put("groupType", "Common");
			
			if(displayName != null && !displayName.equals("")){
				params.put("displayName", displayName);
			}
			
			if(groupUri != null && !groupUri.equals("")){
				params.put("groupUri", groupUri);
			}
			
			if(pocCompany.getIsShowPrivateGroup() != null && !pocCompany.getIsShowPrivateGroup().equals("") && pocCompany.getIsShowPrivateGroup().equals("N")){
				params.put("isPrivate", "N");
			}
			
			List<PocGroup> pocGroups = findForUnPage(params);
			
			if(pocGroups != null && pocGroups.size() > 0){
				JSONArray jsonArray = new JSONArray();
				
				Map<String, Object> pocDirectoryParams = new HashMap<String, Object>();
				pocDirectoryParams.put("auid", "org.openmobilealliance.poc-groups");
				List<PocDirectory> pocDirectorys = pocDirectoryService.findForUnPage(pocDirectoryParams); 
				
				for (PocGroup pocGroup : pocGroups) {
					
					String pocCreator = "";
					for (PocDirectory pocDirectory : pocDirectorys) {
						if(pocDirectory.getOwnerUri().equals(pocGroup.getOwnerUri()) && pocDirectory.getDirectoryFileName().equals(pocGroup.getGroupFileName())){
							pocCreator = pocDirectory.getPocCreator();
							break;
						}
					}
					
					JSONObject jsonObjectData = new JSONObject();
					
					jsonObjectData.put("ownerUri", pocGroup.getOwnerUri());
					jsonObjectData.put("groupUri", pocGroup.getGroupUri());
					jsonObjectData.put("displayName", pocGroup.getDisplayName());
					jsonObjectData.put("inviteMembers", pocGroup.getInviteMembers());
					jsonObjectData.put("maxParticipantCount", pocGroup.getMaxParticipantCount());
					jsonObjectData.put("roleId", pocGroup.getRoleId());
					jsonObjectData.put("groupFileName", pocGroup.getGroupFileName());
					jsonObjectData.put("headPortrait", pocGroup.getHeadPortrait() == null ? "" : pocGroup.getHeadPortrait());
					jsonObjectData.put("province", pocGroup.getProvince() == null ? "" : pocGroup.getProvince());
					jsonObjectData.put("city", pocGroup.getCity() == null ? "" : pocGroup.getCity());
					jsonObjectData.put("sign", pocGroup.getSign() == null ? "" : pocGroup.getSign());
					jsonObjectData.put("groupLevel", pocGroup.getGroupLevel() == null ? "" : pocGroup.getGroupLevel());
					jsonObjectData.put("pocCreator", pocCreator);
					
					jsonArray.add(jsonObjectData);
				}
				
				jsonObjectResult.put("result", "1");
				jsonObjectResult.put("data", jsonArray);
				
			}else {
				jsonObjectResult.put("result", "0");
				jsonObjectResult.put("message", "没有相关的用户");
			}
			
		} catch (Exception e) {
			// TODO: handle exception
			jsonObjectResult.put("result", "0");
			jsonObjectResult.put("message", e.getMessage());
		}
		
		json = jsonObjectResult.toString();
		
		return json;
	}
	
	public String editPocGroupJson(PocServerConfig pocServerConfig, Document doc, String urlPara){
		String json = "";
		
		JSONObject jsonObjectResult = new JSONObject();
		
		String paraJson = urlPara;
		JSONObject jsonObject = JSONObject.fromObject(paraJson);
		
		String groupUri = "";
		if(jsonObject.containsKey("groupUri")){
			groupUri = jsonObject.opt("groupUri").toString();
		}
		
		if(groupUri != null && !groupUri.equals("")){
			Map<String, Object> params = new HashMap<String, Object>();
			params.put("groupUri", groupUri);
			
			List<PocGroup> pocGroups = findForUnPage(params);
			
			if(pocGroups != null && pocGroups.size() > 0){
				PocGroup pocGroup = pocGroups.get(0);
				
				String displayName = "";
				if(jsonObject.containsKey("displayName")){
					displayName = jsonObject.opt("displayName").toString();
					
					Map<String, Object> tempPocGroupParams = new HashMap<String, Object>();
					tempPocGroupParams.put("groupUri", groupUri);
					tempPocGroupParams.put("displayName", displayName);
					
					List<PocGroup> tempPocGroups = findUnPageByCheckDisplayName(tempPocGroupParams);
					
					if(tempPocGroups != null && tempPocGroups.size() > 0){
						jsonObjectResult.put("result", "0");
						jsonObjectResult.put("message", "群组创建失败，群组名称"+displayName+"已经存在");
						
						json = jsonObjectResult.toString();
						
						return json;
					}
					
					pocGroup.setDisplayName(displayName);
				}
				
				String inviteMembers = "";
				if(jsonObject.containsKey("inviteMembers")){
					inviteMembers = jsonObject.opt("inviteMembers").toString();
					
					pocGroup.setInviteMembers(inviteMembers);
				}
				
				int maxParticipantCount = 0;
				if(jsonObject.containsKey("maxParticipantCount")){
					maxParticipantCount = Integer.parseInt(jsonObject.opt("maxParticipantCount").toString());
					
					pocGroup.setMaxParticipantCount(maxParticipantCount);
				}
				
				String isPrivate = "";
				if(jsonObject.containsKey("isPrivate")){
					isPrivate = jsonObject.opt("isPrivate").toString();
					
					pocGroup.setIsPrivate(isPrivate);
				}
				
				String roleId = "";
				if(jsonObject.containsKey("roleId")){
					roleId = jsonObject.opt("roleId").toString();
					
					pocGroup.setRoleId(roleId);
				}
				
				String headPortrait = "";
				if(jsonObject.containsKey("headPortrait")){
					headPortrait = jsonObject.opt("headPortrait").toString();
					
					pocGroup.setHeadPortrait(headPortrait);
				}
				
				String province = "";
				if(jsonObject.containsKey("province")){
					province = jsonObject.opt("province").toString();
					
					pocGroup.setProvince(province);
				}
				
				String city = "";
				if(jsonObject.containsKey("city")){
					city = jsonObject.opt("city").toString();
					
					pocGroup.setCity(city);
				}
				
				String sign = "";
				if(jsonObject.containsKey("sign")){
					sign = jsonObject.opt("sign").toString();
					
					pocGroup.setSign(sign);
				}
				
				String groupLevel = "";
				if(jsonObject.containsKey("groupLevel")){
					groupLevel = jsonObject.opt("groupLevel").toString();
					
					pocGroup.setGroupLevel(groupLevel);
				}
				
				String channelCode = "";
				if(jsonObject.containsKey("channelCode")){
					channelCode = jsonObject.opt("channelCode").toString();
					
					pocGroup.setChannelCode(channelCode);
				}
				
				update(pocGroup);
				
				jsonObjectResult.put("result", "1");
				jsonObjectResult.put("data", "200");
			}else {
				jsonObjectResult.put("result", "0");
				jsonObjectResult.put("message", "该群组不存在");
			}
		}else {
			jsonObjectResult.put("result", "0");
			jsonObjectResult.put("message", "缺少必要参数");
		}
		
		json = jsonObjectResult.toString();
		
		return json;
	}
	
	public void runXcapCmdEditGroup(String ownerUri, List<PocGroupMember> pocGroupMembers, PocCompany pocCompany){
		/*runXcapCmd*/
		if(pocGroupMembers != null && pocGroupMembers.size() > 0){
			List<PocRpcParamenter> pocRpcParamenters = new ArrayList<PocRpcParamenter>();
			boolean isContainSelf = false;
			int i = 1;
			for (PocGroupMember member : pocGroupMembers) {
				i += 1;
				
				String memberOwnerUri = member.getGroupMemberUri();
				
				if(memberOwnerUri.equals(ownerUri)){
					isContainSelf = true;
				}
				
				PocRpcParamenter pocRpcParamenter1 = new PocRpcParamenter();
				pocRpcParamenter1.setParaName("pocRpcParamenter" + String.valueOf(i));
				pocRpcParamenter1.setParaType("String");
				pocRpcParamenter1.setParaValue("UPDATE_GROUP");
				pocRpcParamenter1.setParaSort(i);
				pocRpcParamenters.add(pocRpcParamenter1);
				
				PocRpcParamenter pocRpcParamenter2 = new PocRpcParamenter();
				pocRpcParamenter2.setParaName("pocRpcParamenter" + String.valueOf(i + 1));
				pocRpcParamenter2.setParaType("String");
				pocRpcParamenter2.setParaValue(member.getGroupMemberUri());
				pocRpcParamenter2.setParaSort(i + 1);
				pocRpcParamenters.add(pocRpcParamenter2);
			}
			
			if(!isContainSelf){
				PocRpcParamenter pocRpcParamenter1 = new PocRpcParamenter();
				pocRpcParamenter1.setParaName("pocRpcParamenter" + String.valueOf(i));
				pocRpcParamenter1.setParaType("String");
				pocRpcParamenter1.setParaValue("UPDATE_GROUP");
				pocRpcParamenter1.setParaSort(0);
				pocRpcParamenters.add(pocRpcParamenter1);
				
				PocRpcParamenter pocRpcParamenter2 = new PocRpcParamenter();
				pocRpcParamenter2.setParaName("pocRpcParamenter" + String.valueOf(i + 1));
				pocRpcParamenter2.setParaType("String");
				pocRpcParamenter2.setParaValue(ownerUri);
				pocRpcParamenter2.setParaSort(1);
				pocRpcParamenters.add(pocRpcParamenter2);
			}
			
			pocSyncDataService.SyncData("runXcapCmd", pocRpcParamenters, pocCompany);
		}
	}
	
	@SuppressWarnings("rawtypes")
	public void runXcapCmdJoinOrRemoveMember(PocCompany pocCompany, PocGroup pcoGroup, List<PocGroupMember> newPocGroupMembers, List<PocGroupMember> oldPocGroupMembers){
		/*runXcapCmd*/
		Map<String, Object> allPocGroupMemberMap = new HashMap<String, Object>();
		
		for (PocGroupMember newPocGroupMember : newPocGroupMembers) {
			allPocGroupMemberMap.put(newPocGroupMember.getGroupMemberUri(), newPocGroupMember.getDisplayName() == null ? "" : newPocGroupMember.getDisplayName());
		}
		
		for (PocGroupMember oldPocGroupMember : oldPocGroupMembers) {
			allPocGroupMemberMap.put(oldPocGroupMember.getGroupMemberUri(), oldPocGroupMember.getDisplayName() == null ? "" : oldPocGroupMember.getDisplayName());
		}
		
		if(allPocGroupMemberMap != null && allPocGroupMemberMap.size() > 0){
			List<PocRpcParamenter> pocRpcParamenters = new ArrayList<PocRpcParamenter>();
			for (Map.Entry entry : allPocGroupMemberMap.entrySet()) {
				String memberOwnerUri = entry.getKey().toString();
				
				if(memberOwnerUri.equals(pcoGroup.getOwnerUri())){
					continue;
				}
				
				PocRpcParamenter pocRpcParamenter1 = new PocRpcParamenter();
				pocRpcParamenter1.setParaName("pocRpcParamenter1");
				pocRpcParamenter1.setParaType("String");
				pocRpcParamenter1.setParaValue("GROUP_EVENT");
				pocRpcParamenter1.setParaSort(1);
				pocRpcParamenters.add(pocRpcParamenter1);
				
				PocRpcParamenter pocRpcParamenter2 = new PocRpcParamenter();
				pocRpcParamenter2.setParaName("pocRpcParamenter2");
				pocRpcParamenter2.setParaType("String");
				pocRpcParamenter2.setParaValue(memberOwnerUri);
				pocRpcParamenter2.setParaSort(2);
				pocRpcParamenters.add(pocRpcParamenter2);
				
				String content = getRunXcapCmdJoinOrRemoveMemberContent(pcoGroup, newPocGroupMembers, oldPocGroupMembers);
				
				PocRpcParamenter pocRpcParamenter3 = new PocRpcParamenter();
				pocRpcParamenter3.setParaName("pocRpcParamenter3");
				pocRpcParamenter3.setParaType("String");
				pocRpcParamenter3.setParaValue(content);
				pocRpcParamenter3.setParaSort(3);
				pocRpcParamenters.add(pocRpcParamenter3);
			}
			
			pocSyncDataService.SyncData("runXcapCmd", pocRpcParamenters, pocCompany);
		}
	}
	
	@SuppressWarnings("rawtypes")
	public String getRunXcapCmdJoinOrRemoveMemberContent(PocGroup pcoGroup, List<PocGroupMember> newPocGroupMembers, List<PocGroupMember> oldPocGroupMembers){
		String result= "";
		
		Document doc = DocumentHelper.createDocument();
		Element groupElement = doc.addElement("group");
		
		groupElement.addAttribute("OwnerUri", pcoGroup.getOwnerUri() == null ? "" : pcoGroup.getOwnerUri());
		groupElement.addAttribute("GroupUri", pcoGroup.getGroupUri() == null ? "" : pcoGroup.getGroupUri());
		groupElement.addAttribute("DisplayName", pcoGroup.getDisplayName() == null ? "" : pcoGroup.getDisplayName());
		groupElement.addAttribute("InviteMembers", pcoGroup.getInviteMembers() == null ? "" : pcoGroup.getInviteMembers());
		groupElement.addAttribute("MaxParticipantCount", pcoGroup.getMaxParticipantCount() < 0 ? "0" : String.valueOf(pcoGroup.getMaxParticipantCount()));
		groupElement.addAttribute("GroupFileName", pcoGroup.getGroupFileName() == null ? "" : pcoGroup.getGroupFileName());
		groupElement.addAttribute("HeadPortrait", pcoGroup.getHeadPortrait() == null ? "" : pcoGroup.getHeadPortrait());
		groupElement.addAttribute("Province", pcoGroup.getProvince() == null ? "" : pcoGroup.getProvince());
		groupElement.addAttribute("City", pcoGroup.getCity() == null ? "" : pcoGroup.getCity());
		groupElement.addAttribute("Sign", pcoGroup.getSign() == null ? "" : pcoGroup.getSign());
		groupElement.addAttribute("GroupLevel", pcoGroup.getGroupLevel() == null ? "" : pcoGroup.getGroupLevel());
		
		Element listElement = groupElement.addElement("list");
		
		Map<String, Object> newPocGroupMemberMap = new HashMap<String, Object>();
		for (PocGroupMember newPocGroupMember : newPocGroupMembers) {
			if(newPocGroupMember.getGroupMemberUri().equals(pcoGroup.getOwnerUri())){
				continue;
			}
			newPocGroupMemberMap.put(newPocGroupMember.getGroupMemberUri(), newPocGroupMember.getGroupUri());
		}
		
		Map<String, Object> oldPocGroupMemberMap = new HashMap<String, Object>();
		for (PocGroupMember oldPocGroupMember : oldPocGroupMembers) {
			if(oldPocGroupMember.getGroupMemberUri().equals(pcoGroup.getOwnerUri())){
				continue;
			}
			oldPocGroupMemberMap.put(oldPocGroupMember.getGroupMemberUri(), oldPocGroupMember.getGroupUri());
		}
		
		List<String> addPocGroupMemberList = new ArrayList<String>();
		for (Map.Entry entry : newPocGroupMemberMap.entrySet()) {
			boolean isAdd = false;
			
			if(oldPocGroupMemberMap.containsKey(entry.getKey())){
				continue;
			}else {
				isAdd = true;
			}
			
			if(isAdd){
				addPocGroupMemberList.add(entry.getKey().toString());
			}
		}
		
		List<String> deleltPocGroupMemberList = new ArrayList<String>();
		for (Map.Entry entry : oldPocGroupMemberMap.entrySet()) {
			boolean isDelete = false;
			
			if(newPocGroupMemberMap.containsKey(entry.getKey())){
				continue;
			}else {
				isDelete = true;
			}
			
			if(isDelete){
				deleltPocGroupMemberList.add(entry.getKey().toString());
			}
		}
		
		/*添加成员*/
		if(addPocGroupMemberList != null && addPocGroupMemberList.size() > 0){
			for (String pocGroupMemberUri : addPocGroupMemberList) {
				Element addElement = listElement.addElement("add");
				addElement.addAttribute("GroupMemberUri", pocGroupMemberUri);
				
				/*Map<String, Object> PocUserMap = new HashMap<String, Object>();
				List<PocUser> pocUsers = pocUserService.findForUnPage(PocUserMap);
				
				if(pocUsers != null && pocUsers.size() > 0){
					PocUser pocUser = pocUsers.get(0);
					addElement.addAttribute("displayName", pocUser.getDisplayName() == null ? "" : pocUser.getDisplayName());
					addElement.addAttribute("headPortrait", pocUser.getHeadPortrait() == null ? "" : pocUser.getHeadPortrait()); 
				}*/
			}
		}
		
		/*移除成员*/
		if(deleltPocGroupMemberList != null && deleltPocGroupMemberList.size() > 0){
			for (String pocGroupMemberUri : deleltPocGroupMemberList) {
				Element removeElement = listElement.addElement("remove");
				removeElement.addAttribute("GroupMemberUri", pocGroupMemberUri);
				
				/*Map<String, Object> PocUserMap = new HashMap<String, Object>();
				List<PocUser> pocUsers = pocUserService.findForUnPage(PocUserMap);
				
				if(pocUsers != null && pocUsers.size() > 0){
					PocUser pocUser = pocUsers.get(0);
					removeElement.addAttribute("displayName", pocUser.getDisplayName() == null ? "" : pocUser.getDisplayName());
					removeElement.addAttribute("headPortrait", pocUser.getHeadPortrait() == null ? "" : pocUser.getHeadPortrait()); 
				}*/
			}
		}
		
		result = doc.asXML();
		System.out.println(result);
		
		if(result != null && !result.equals("")){
			byte[] bits;
			
			try {
				BASE64Encoder enc = new BASE64Encoder();
				bits = result.getBytes("UTF8");
				result = enc.encode(bits);
			} catch (Exception e) {
				// TODO: handle exception
				System.out.println(e.getMessage());
			}
		}
		
		System.out.println(result);
		
		return result;
	}
	
	public String getPocGroupMemberByGroupUriJson(PocServerConfig pocServerConfig, Document doc, String urlPara){
		String json = "";
		
		String paraJson = urlPara;
		JSONObject jsonObject = JSONObject.fromObject(paraJson);
		
		String groupUri = "";
		if(jsonObject.containsKey("groupUri")){
			groupUri = jsonObject.opt("groupUri").toString();
		}
		
		JSONObject jsonObjectResult = new JSONObject();
		
		if(groupUri != null && !groupUri.equals("")){
			try {
				Map<String, Object> params = new HashMap<String, Object>();
				params.put("groupUri", groupUri);
				List<PocGroupMember> pocGroupMembers = pocGroupMemberService.findForUnPage(params);
				
				if(pocGroupMembers != null && pocGroupMembers.size() > 0){
					JSONArray jsonArray = new JSONArray();
					
					for (PocGroupMember pocGroupMember : pocGroupMembers) {
						
						JSONObject jsonObjectData = new JSONObject();
						
						jsonObjectData.put("groupMemberUri", pocGroupMember.getGroupMemberUri() == null ? "" : pocGroupMember.getGroupMemberUri());
						
						jsonArray.add(jsonObjectData);
					}
					
					jsonObjectResult.put("result", "1");
					jsonObjectResult.put("data", jsonArray);
					
				}else {
					jsonObjectResult.put("result", "0");
					jsonObjectResult.put("message", "没有相关的群组成员");
				}
				
			} catch (Exception e) {
				// TODO: handle exception
				jsonObjectResult.put("result", "0");
				jsonObjectResult.put("message", e.getMessage());
			}
		}else {
			jsonObjectResult.put("result", "0");
			jsonObjectResult.put("message", "缺少必要的参数");
		}
		
		json = jsonObjectResult.toString();
		
		return json;
	}
	
	public String getPocGroupByDisplayName(PocServerConfig pocServerConfig, Document doc, String urlPara){
		String json = "";
		
		JSONObject jsonObjectResult = new JSONObject();
		
		String paraJson = urlPara;
		JSONObject jsonObject = JSONObject.fromObject(paraJson);
		
		String displayName = "";
		if(jsonObject.containsKey("displayName")){
			displayName = jsonObject.opt("displayName").toString();
		}
		
		String groupUri = "";
		if(jsonObject.containsKey("groupUri")){
			groupUri = jsonObject.opt("groupUri").toString();
		}
		
		if(displayName != null && !displayName.equals("")){
			Map<String, Object> params = new HashMap<String, Object>();
			params.put("displayName", displayName);
			
			List<PocGroup> pocGroups = findUnPageByCheckDisplayName(params);
			
			if(pocGroups != null && pocGroups.size() > 0){
				PocGroup pocGroup = pocGroups.get(0);
				
				if(pocGroup != null && pocGroup.getGroupUri() != null && !pocGroup.getGroupUri().equals("") && !pocGroup.getGroupUri().equals(groupUri)){
					jsonObjectResult.put("result", "0");
					jsonObjectResult.put("message", "群组名称"+displayName+"已经存在");
					
					json = jsonObjectResult.toString();
					
					return json;
				}
			}
			
			jsonObjectResult.put("result", "1");
			jsonObjectResult.put("data", "200");
		}else {
			jsonObjectResult.put("result", "0");
			jsonObjectResult.put("message", "缺少必要参数");
		}
		
		json = jsonObjectResult.toString();
		
		return json;
	}
	
	public String getPocGroupBaseJson(PocServerConfig pocServerConfig, Document doc, String urlPara){
		String json = "";
		
		JSONObject jsonObjectResult = new JSONObject();
		
		String paraJson = urlPara;
		JSONObject jsonObject = JSONObject.fromObject(paraJson);
		
		String groupUri = "";
		if(jsonObject.containsKey("groupUri")){
			groupUri = jsonObject.opt("groupUri").toString();
		}
		
		if(groupUri != null && !groupUri.equals("")){
			Map<String, Object> params = new HashMap<String, Object>();
			params.put("groupUri", groupUri);
			
			List<PocGroup> pocGroups = findForUnPage(params);
			
			if(pocGroups != null && pocGroups.size() > 0){
				
				JSONArray jsonArray = new JSONArray();
				
				for (PocGroup pocGroup : pocGroups) {
					JSONObject jsonObjectData = new JSONObject();
					
					jsonObjectData.put("ownerUri", pocGroup.getOwnerUri());
					jsonObjectData.put("groupUri", pocGroup.getGroupUri());
					jsonObjectData.put("displayName", pocGroup.getDisplayName() == null ? "" : pocGroup.getDisplayName());
					jsonObjectData.put("inviteMembers", pocGroup.getInviteMembers());
					jsonObjectData.put("maxParticipantCount", pocGroup.getMaxParticipantCount());
					jsonObjectData.put("isPrivate", pocGroup.getIsPrivate() == null ? "" : pocGroup.getIsPrivate());
					jsonObjectData.put("groupFileName", pocGroup.getGroupFileName());
					jsonObjectData.put("headPortrait", pocGroup.getHeadPortrait() == null ? "" : pocGroup.getHeadPortrait());
					jsonObjectData.put("province", pocGroup.getProvince() == null ? "" : pocGroup.getProvince());
					jsonObjectData.put("city", pocGroup.getCity() == null ? "" : pocGroup.getCity());
					jsonObjectData.put("sign", pocGroup.getSign() == null ? "" : pocGroup.getSign());
					jsonObjectData.put("groupLevel", pocGroup.getGroupLevel() == null ? "" : pocGroup.getGroupLevel());
					jsonObjectData.put("channelCode", pocGroup.getChannelCode() == null ? "" : pocGroup.getChannelCode());
					jsonObjectData.put("createTime", pocGroup.getCreateTime());
					
					jsonArray.add(jsonObjectData);
				}
				
				jsonObjectResult.put("result", "1");
				jsonObjectResult.put("data", jsonArray.toString());
			}else {
				jsonObjectResult.put("result", "0");
				jsonObjectResult.put("message", "该群组不存在");
			}
		}else {
			jsonObjectResult.put("result", "0");
			jsonObjectResult.put("message", "缺少必要参数");
		}
		
		json = jsonObjectResult.toString();
		
		return json;
	}
	
	public String initPublicGroupPocDirectoryJson(String ownerUri, PocCompany pocCompany){
		JSONArray jsonArray = new JSONArray();
		
		Map<String, Object> params = new HashMap<String, Object>();
		params.put("groupType", "Public");
		params.put("status", "Y");
		
		List<PocGroup> pocGroups = findForUnPage(params);
		
		if(pocGroups != null && pocGroups.size() > 0){
			String host = pocCompany.getPocHost();
			String port = pocCompany.getPocPort();
			String appName = pocCompany.getPocAppName();
			
			for (PocGroup pocGroup : pocGroups) {
				String etag = "";
				
				Map<String, Object> pocDirectoryParams = new HashMap<String, Object>();
				pocDirectoryParams.put("pocCreator", pocGroup.getOwnerUri());
				pocDirectoryParams.put("ownerUri", pocGroup.getOwnerUri());
				pocDirectoryParams.put("auid", "org.openmobilealliance.poc-groups");
				pocDirectoryParams.put("directoryFileName", pocGroup.getGroupFileName());
				pocDirectoryParams.put("status", "Y");
				List<PocDirectory> pocDirectorys = pocDirectoryService.findForUnPage(pocDirectoryParams);
				if(pocDirectorys != null && pocDirectorys.size() > 0){
					PocDirectory pocDirectory = pocDirectorys.get(0);
					
					if(pocDirectory.getOwnerUri().equals(ownerUri)){
						continue;
					}
					
					Map<String, Object> pocGroupMemberParams = new HashMap<String, Object>();
					pocGroupMemberParams.put("groupUri", pocGroup.getGroupUri());
					
					List<PocGroupMember> pocGroupMembers = pocGroupMemberService.findForUnPage(pocGroupMemberParams);
					
					boolean isContainGroupMember = false;
					for (PocGroupMember pocGroupMember : pocGroupMembers) {
						if(pocGroupMember.getGroupMemberUri().equals(ownerUri)){
							isContainGroupMember = true;
							break;
						}
					}
					
					if(isContainGroupMember){
						continue;
					}
					
					etag = pocDirectory.getAuidEtag();
				}
				
				String auidUri = "" + host + ":" + port + "/" + appName + "/org.openmobilealliance.poc-groups/users/" + pocGroup.getOwnerUri() + "/" + pocGroup.getGroupFileName();
				
				JSONObject jsonObject = new JSONObject();
				jsonObject.put("uri", auidUri);
				jsonObject.put("etag", etag);
				
				jsonArray.add(jsonObject);
				
				/*Element entryElement = DocumentHelper.createElement("entry");
				entryElement.addAttribute("uri", auidUri);
				entryElement.addAttribute("etag", etag);
				folderElement.add(entryElement);*/
			}
		}
		
		return jsonArray.toString();
	}
	
	public void createPocGroupCreateMemberMessage(PocServerConfig pocServerConfig, PocCompany pocCompany, String ownerUri, String groupUri, String targetUris, String description, String enCodegroupMemberDisplayName){
		String host = pocCompany.getPocHost();
		String port = pocCompany.getPocPort();
		String appName = pocCompany.getPocAppName();
		
		String url = "" + host + ":" + port + "/" + appName + "/poc.pocmessagecenter.create/global";
		
		JSONObject jsonObject = new JSONObject();
		jsonObject.put("ownerUri", ownerUri);
		jsonObject.put("targetUris", targetUris);
		jsonObject.put("description", description == null ? "" : description);
		jsonObject.put("messageType", "PocGroupInvitation");
		jsonObject.put("processHost", host);
		jsonObject.put("processPort", port);
		jsonObject.put("processAppName", "/" + appName);
		jsonObject.put("processUrlPart1", "org.openmobilealliance.poc-groups");
		
		String groupFileName = pocServerConfig.getUrlPart4();
		String processUrlPart2 = "/org.openmobilealliance.poc-groups/users/"+ownerUri+"/"+groupFileName+"/~~/group/list-service%5b@uri=%22"+groupUri+"%22%5d/list/entry%5b@uri=%22"+targetUris+"%22%5d";
		jsonObject.put("processUrlPart2", processUrlPart2);
		
		jsonObject.put("porcessMethodType", "PUT");
		jsonObject.put("processContentType", "application/vnd.oma.poc.groups+xml");
		
		String processContent = "<groupmember><entry uri=\""+targetUris+"\"><groupmember-displayname>"+enCodegroupMemberDisplayName+"</groupmember-displayname></entry></groupmember>";
		jsonObject.put("processContent", processContent);
		
		String json = jsonObject.toString();
		try {
			SendHttpRequestUtil.sendPostJson(url, json);
		} catch (Exception e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}
}